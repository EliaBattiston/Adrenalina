<assembly>
    <id>AI-assembly</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>it/polimi/ingsw/controller/Client*</include>
                <include>it/polimi/ingsw/controller/AIMain*</include>
                <include>it/polimi/ingsw/controller/Configuration*</include>
                <include>it/polimi/ingsw/controller/Connection*</include>
                <include>it/polimi/ingsw/controller/GamePhase*</include>
                <include>it/polimi/ingsw/controller/Interaction*</include>
                <include>it/polimi/ingsw/controller/Payload*</include>
                <include>it/polimi/ingsw/controller/RMIClient*</include>
                <include>it/polimi/ingsw/controller/RMIConnHandler*</include>
                <include>it/polimi/ingsw/controller/SocketClient*</include>
                <include>it/polimi/ingsw/controller/Timeout*</include>

                <include>it/polimi/ingsw/model/Action*</include>
                <include>it/polimi/ingsw/model/ActionLambda*</include>
                <include>it/polimi/ingsw/model/Activities*</include>
                <include>it/polimi/ingsw/model/Card*</include>
                <include>it/polimi/ingsw/model/Cell*</include>
                <include>it/polimi/ingsw/model/Color*</include>
                <include>it/polimi/ingsw/model/Deck*</include>
                <include>it/polimi/ingsw/model/Direction*</include>
                <include>it/polimi/ingsw/model/EffectsLambda*</include>
                <include>it/polimi/ingsw/model/EndlessDeck*</include>
                <include>it/polimi/ingsw/model/FeasibleLambda*</include>
                <include>it/polimi/ingsw/model/Fighter*</include>
                <include>it/polimi/ingsw/model/Loot*</include>
                <include>it/polimi/ingsw/model/MapDistanceStrategy*</include>
                <include>it/polimi/ingsw/model/PlayerLambda*</include>
                <include>it/polimi/ingsw/model/Point*</include>
                <include>it/polimi/ingsw/model/Power*</include>
                <include>it/polimi/ingsw/model/Side*</include>
                <include>it/polimi/ingsw/model/Weapon*</include>

                <include>it/polimi/ingsw/view/*</include>
                <include>it/polimi/ingsw/exceptions/*</include>
                <include>it/polimi/ingsw/clientmodel/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>font/**</include>
                <include>images/**</include>
                <include>baseGame.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.sourceDirectory}/src</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>